<ion-list no-padding>
	<ion-item>
		<ion-label  position="floating">{{Language.AssetId}}</ion-label>
		<ion-select [(ngModel)]="selectItem.AssetId">
			<ion-select-option *ngFor="let asset of selectItem.listAsset" [value]="asset.AssetID">{{asset.AssetName}}</ion-select-option>
		</ion-select>
	</ion-item>
	<ion-item>
		<ion-label  position="stacked">{{Language.InputDate}}</ion-label>
	</ion-item>
	<li-ionic4-datepicker [(ngModel)]="InputDate" style="margin-left:15px"
	[inputDateConfig]="datePickerConfig"></li-ionic4-datepicker>
    <ion-button (click)="onSearch()" class="search">{{Language.btnSearch}}</ion-button>
</ion-list>
<ion-content  class="dsylenh"  scrollY="false">
	<ion-content class="detail-ylenh ylenh">
		<ion-refresher style="z-index:0" (ionRefresh)="doRefresh($event)">
			<ion-refresher-content pullingIcon="arrow-dropdown"
								   pullingText="Lấy dữ liệu mới"
								   refreshingSpinner="circles">
			</ion-refresher-content>
		</ion-refresher>
		<mat-accordion multi="true">
		<div class="list card ttcd" *ngFor="let item of selectItem.ListAssetOperation" style="margin-bottom: 10px;">
			<mat-expansion-panel class="mat-panel" hideToggle="true" #xyz [expanded]="true"> 
				<mat-expansion-panel-header  style="height: 48px;"   >
					<mat-panel-title>
						<ion-icon class="ex-co-icon" *ngIf="!xyz.expanded" src="assets/icon/chevron-forward-outline.svg"></ion-icon>
						<ion-icon class="ex-co-icon" *ngIf="xyz.expanded" src="assets/icon/chevron-forward-outline_down.svg"></ion-icon>
							<p class="dichvu">{{ item.AssetId }}</p>
						</mat-panel-title>
						<mat-panel-description class="more-popover">
							<ion-icon class="more-popover-icon" name="create-outline" (click)="onSelectdData(item)" style="margin-top: 12px;"></ion-icon>
						</mat-panel-description>
				</mat-expansion-panel-header>
			<div class="item item-text-wrap">
            {{Language.OperatingID}}
				<span class="item-note">{{ item.OperatingId }}</span>
			</div>
			<div class="item item-text-wrap">
				<span>{{Language.OperatingName}}</span>
				<span class="item-note">{{ item.OperatingName }}</span>
			</div>
			<div class="item item-text-wrap">
				{{Language.InputDate}}
					<span class="item-note">{{ item.InputDate  | amDateFormat:'DD/MM/YYYY HH:mm:ss' }}</span>
				</div>
			<div class="item item-text-wrap">
				{{Language.UMID}}
				<span class="item-note">{{ item.UMID }}</span>
			</div>
			<div class="item item-text-wrap">
				{{Language.Value}}
				<span class="item-note">{{ item.Value }}</span>
			</div>
			<div class="item item-text-wrap">
				{{Language.Note}}
				<span class="item-note">{{ item.Note }}</span>
			</div>
			</mat-expansion-panel>
		</div>
		</mat-accordion>
	</ion-content>
</ion-content>
